<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multimedia">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.multimedia.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.multimedia.ui.activity.image.ImageActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.DrawImgActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.SurfaceDrawActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.CustomImgActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.Camera1SurfaceActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.Camera1TextureActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.Camera2SurfaceActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.LargeImageViewActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.SimpleOpenGlActivity" />
        <activity android:name="com.example.multimedia.ui.activity.image.SimpleJniActivity" />
        <activity android:name="com.example.multimedia.ui.activity.audio.AudioActivity" />
        <activity android:name="com.example.multimedia.ui.activity.audio.MediaRecordActivity" />
        <activity android:name="com.example.multimedia.ui.activity.audio.AudioPcmRecordActivity" />
        <activity android:name="com.example.multimedia.ui.activity.audio.AudioWavRecordActivity" />
        <activity android:name="com.example.multimedia.ui.activity.video.VideoActivity" />
        <activity android:name="com.example.multimedia.ui.activity.video.Camera1RecordActivity" />
        <activity android:name="com.example.multimedia.ui.activity.video.VideoExtractorMuxerActivity" />
    </application>
</manifest>